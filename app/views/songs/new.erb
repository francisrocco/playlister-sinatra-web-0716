<form action="/songs" method="post">
  Song Name: <input type="text" name="song[name]" id="Name">
  <br>
  Artist: <input type="text" name="song[artist][name]" id="Artist Name">
  <br>
  Song Genres:
  <br>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="song[genres][]" value="<%= genre.id %>"><%= genre.name %><br>
  <% end %>
  <br>
  <br>
  <input type="submit" value="Create">
</form>
